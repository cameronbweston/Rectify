<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1>hello, <%= user ? user.profile.name : "friend" %></h1>
  <% if (user?.profile.avatar) { %>
    <div>
      <img 
        src="<%= user.profile.avatar %>" 
        alt="<%= user.profile.name %> avatar"
      >
    </div>
  <% } %>
  <h4>Not Satisfied? Ctrl+R to Refresh</h4>
  <h4>Love it? Save it!</h4>
  <form action="/playlists/savePlaylist" method="POST">
     <input type="text" name="playlist" value="<%= JSON.stringify(recommendedRandomPlaylist)%>"> 
     <button type="submit" class="btn btn-dark">Save to Profile</button>
  </form>  
  <ul class="list-group">
      <% recommendedRandomPlaylist.forEach(song => { %>
        <li class="list-group-item"><img src="<%= song.imageUrl %>" alt=""><%= song.name %> - <%= song.artist %> </li>
      <% }) %>
  </ul>
</main>

<%- include('../partials/footer') %>
